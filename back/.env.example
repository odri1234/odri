# Application
APP_NAME=ODRI WiFi System
APP_ENV=development
APP_PORT=3000
API_PREFIX=api/v1

# JWT Auth
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=odri
DB_PASSWORD=17049381
DB_NAME=odriwifi

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# M-PESA API (Safaricom Daraja)
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_SHORTCODE=600000
MPESA_PASSKEY=your_lipa_na_mpesa_passkey
MPESA_CALLBACK_URL=https://your-domain.com/api/v1/payments/mpesa/callback
MPESA_CONFIRMATION_URL=https://your-domain.com/api/v1/payments/mpesa/confirmation
MPESA_VALIDATION_URL=https://your-domain.com/api/v1/payments/mpesa/validation

# Email Service
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email_user
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@odriwifi.com

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# MikroTik Router Settings
MIKROTIK_HOST=192.168.88.1
MIKROTIK_PORT=8728
MIKROTIK_USERNAME=admin
MIKROTIK_PASSWORD=your_mikrotik_password
MIKROTIK_SSL=false

# Backup Settings
BACKUP_CRON=0 2 * * * # Every day at 2am
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=7

# AI/ML Config
AI_MODEL_PATH=./models/
AI_ANOMALY_THRESHOLD=0.75
AI_DYNAMIC_PRICING_ENABLED=true

# Monitoring
PROMETHEUS_METRICS_ENABLED=true

# Logging
LOG_LEVEL=debug
LOG_RETENTION_DAYS=14

# Default Admin (only used for first-time setup)
DEFAULT_ADMIN_EMAIL=admin@odriwifi.com
DEFAULT_ADMIN_PASSWORD=change_this_password

# Multi-Tenant Setup
MULTI_TENANCY_ENABLED=true
DEFAULT_TENANT=odri

# CDN or Static
CDN_BASE_URL=https://cdn.odriwifi.com

# NodeJS Env
NODE_ENV=development
